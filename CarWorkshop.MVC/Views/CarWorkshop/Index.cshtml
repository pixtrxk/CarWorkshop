@model IEnumerable<CarWorkshop.Application.CarWorkshop.CarWorkshopDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Car Workshops</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card m-4" style="width: 22rem">
           <div class="card-body">
               <h5 class="card-title">@item.Name</h5>
               <h6 class="card-subtitle mb-2 text-muted">@item.PhoneNumber</h6>
               <p class="card-text">@item.Description</p>
               <a class="btn btn-primary" asp-controller="CarWorkshop" asp-action="Details" asp-route-encodedName = "@item.EncodedName">Details</a>
               <a class="btn btn-outline-secondary" asp-controller="CarWorkshop" asp-action="Edit" asp-route-encodedName="@item.EncodedName">Edit</a>
               <a class="btn btn-outline-secondary" asp-controller="CarWorkshop" asp-action="Delete" asp-route-encodedName="@item.EncodedName">Delete</a>

           </div>
        </div>
    }

</div>